<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="/pages/login.xhtml" />
    </url-mapping>
    <url-mapping id="register">
        <pattern value="/login/register" />
        <view-id value="/pages/user.xhtml?mode=register" />
    </url-mapping>
    <url-mapping id="about">
        <pattern value="/about" />
        <view-id value="/pages/about.xhtml" />
    </url-mapping>
    <url-mapping id="newsale">
        <pattern value="/items/new" />
        <view-id value="/pages/item.xhtml" />
    </url-mapping>
    <url-mapping id="itemsList">
        <pattern value="/items" />
        <view-id value="/pages/itemsList.xhtml" />
    </url-mapping>

</pretty-config>